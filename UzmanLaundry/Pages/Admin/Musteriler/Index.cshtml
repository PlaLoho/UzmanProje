@page
@model UzmanLaundry.Pages.Admin.Musteriler.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<div class="container">
    <main role="main" class="pb-3">
        <p>
            <a asp-page="Create">Create New</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Musteriler[0].firmaAdi)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Musteriler[0].islem)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Musteriler)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.firmaAdi)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.islem.islemTuru)
                        </td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                            <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                            <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </main>
</div>

