@page
@model UzmanLaundry.Pages.Admin.Musteriler.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Musteriler</h4>
<div class="container">
    <main role="main" class="pb-3">
        <div class="row">
            <div class="col-md-4">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Musteriler.firmaAdi" class="control-label"></label>
                        <input asp-for="Musteriler.firmaAdi" class="form-control" />
                        <span asp-validation-for="Musteriler.firmaAdi" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Musteriler.islemID" class="control-label"></label>
                        <select asp-for="Musteriler.islemID" class="form-control" asp-items="ViewBag.islemID"></select>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-page="Index">Back to List</a>
        </div>
    </main>
</div>
<hr />


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
